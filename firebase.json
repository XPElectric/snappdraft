{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/clients",
        "destination": "/modules/clients/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
      { "source": "/login", 
        "destination": "/modules/auth/index.html" 
      }
    ]
  }
}
