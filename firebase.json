{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/dashboard",
        "destination": "/index.html"
      },
      {
        "source": "/login",
        "destination": "/modules/auth/index.html"
      },
      {
        "source": "/clients",
        "destination": "/modules/clients/index.html"
      },
      {
        "source": "**",
        "destination": "/modules/auth/index.html"
      }
    ]
  }
}